<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="Sample Title"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:padding="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_desc"
        android:text="@string/sample_desc"
        android:textSize="23sp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:textAlignment="center"
        android:padding="13dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_title1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="26sp"
        android:text="Sample Title"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:padding="13dp"
        app:layout_constraintTop_toBottomOf="@id/home_desc" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_desc1"
        android:text="@string/sample_desc"
        android:textSize="23sp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:textAlignment="center"
        android:padding="13dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/home_title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>